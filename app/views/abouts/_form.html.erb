<%= form_for(@about, :url => about_path(@about.id) ) do |f| %>
  <% if @about.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@about.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @about.errors.full_messages.each do |msg| %>

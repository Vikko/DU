<!DOCTYPE html>
<html>
<head>
  <title>DesignUnited</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag :ckeditor %>
</head>
<body>
<div id='wrapper'>
<div id='leftcol'>
	<p>
		<div id='DULogo'>
		<%= link_to root_path do %>
			<img src="/images/DUlogo.png" width="160px"/>
		<% end %>
		</div>
	</p>
		<%= yield :leftcol %>
</div>
<div id='midcol'>
	<div id='navigation'>
		<%= render :partial => "nav" %>
	</div>
	<div id='content'>
		<% if notice %>
			<p id="notice"><%= notice %></p>
		<% end %>
		<% if alert %>
			<p id="alert"><%= alert %></p>
		<% end %>
		<%= yield %>
	</div>
</div>
<div id='rightcol'>
	<div id='search'><div class='backgroundtitle'><h4>search /</h4></div>
	<%= render :partial => "search" %>
	</div>
	<div id='login'>
		<div class='backgroundtitle'>
		<% if current_user %>
			<h4>Logged in /</h4></div>
			as  
			<% if current_user.username.blank? %>
				<%= current_user.email %>
			<% else %>
				<%= current_user.username %>
			<% end %>
			<%= link_to "Logout", logout_path %><br/>
			<% if can? :view, User %>
				<div id="manageusers">
				<%= link_to "Manage users", users_path %>
				</div>
			<% end %>
		<% else %>
			<h4><%= link_to "Sign up", signup_path %> or <%= link_to "log in /", login_path %></h4></div>
		<% end %>
	</div>
		<%= yield :rightcol %>
	</div>
</div>
<div class="clearfooter"></div>
</div>
<div id="footercenter">
<div id="footer"><table><tr><td>|IMAGE 1|</td><td>|IMAGE 2|</td><td>|IMAGE 3|</td><td>|IMAGE 4|</td></tr></table></div></div>
</body>
</html>

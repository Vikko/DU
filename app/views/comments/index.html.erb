<% @comments.each do |comment| %>
	<h3><%= comment.user %></h3>
		<div id="actions">
		<% if can? :update, comment %>
			<%= link_to "Edit", edit_comment_path(comment) %>|
		<% end %>
		<% if can? :destroy, comment %>
			<%= link_to "Delete", comment, :confirm => "Are you sure you want to delete this comment?\nThis action cannot be undone!", :method => :delete %>
		<% end %>
		</div>
	<%= comment.content %>
<% end %>
